<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dff5f4"
    tools:context="e.avtarlal.mitokm.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="1dp"
        android:id="@+id/relativeLayout"
        android:background="@drawable/textback">

        <ScrollView
            android:id="@+id/textAreaScroller"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_x="0px"
            android:layout_y="25px"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/recordtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:padding="10dp"
                android:scrollbars="horizontal"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#0b0b0b"
                android:textSize="25dp" />
        </ScrollView>
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/textback"
            android:gravity="right"
            android:hint="Calculation Here..."
            android:padding="10dp"
            android:paddingRight="40dp"
            android:textColor="#0b0b0b"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonback"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button1"
            android:layout_toRightOf="@+id/button1"
            android:background="@drawable/buttonback"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button2"
            android:layout_toRightOf="@+id/button2"
            android:background="@drawable/buttonback"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button1"
            android:background="@drawable/buttonback"

            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/button4"
            android:layout_toEndOf="@+id/button1"
            android:layout_toRightOf="@+id/button1"
            android:background="@drawable/buttonback"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button3"
            android:layout_toEndOf="@+id/button5"
            android:layout_toRightOf="@+id/button5"
            android:background="@drawable/buttonback"
            android:text="6" />

        <Button
            android:id="@+id/button7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button4"
            android:background="@drawable/buttonback"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button5"
            android:layout_toEndOf="@+id/button7"
            android:layout_toRightOf="@+id/button7"
            android:background="@drawable/buttonback"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/button8"
            android:layout_toEndOf="@+id/button5"
            android:layout_toRightOf="@+id/button5"
            android:background="@drawable/buttonback"
            android:text="9" />

        <Button
            android:id="@+id/btndot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button7"
            android:background="@drawable/buttonback"
            android:text="." />

        <Button
            android:id="@+id/btnequal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/btndot"
            android:layout_toEndOf="@+id/button7"
            android:layout_toRightOf="@+id/button7"
            android:background="@drawable/buttonback"
            android:text="=" />

        <Button
            android:id="@+id/button0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button9"
            android:layout_toEndOf="@+id/button8"
            android:layout_toRightOf="@+id/button8"
            android:background="@drawable/buttonback"
            android:text="0" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/buttonback"
            android:text="+" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/button9"
            android:background="@drawable/buttonback"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="-" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/btnMinus"
            android:layout_alignStart="@+id/btnMinus"
            android:layout_below="@+id/btnMinus"
            android:background="@drawable/buttonback"
            android:text="/" />
        <Button
            android:id="@+id/btnMultiple"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/btnDivide"
            android:layout_alignStart="@+id/btnDivide"
            android:background="@drawable/buttonback"
            android:layout_below="@+id/btnDivide"
            android:text="*" />

        <Button
            android:id="@+id/btnclear"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnPlus"
            android:layout_toStartOf="@+id/btnPlus"
            android:background="@drawable/buttonback"
            android:text="AC" />
    </RelativeLayout>
</RelativeLayout>
